@page "/Index"

@inject Blazored.SessionStorage.ISessionStorageService sessionStorage
@((MarkupString)loader)
<style>
    .row-cols-3 {
        height: 150px;
        width: 300px;
        background-color: #6c1c81;
        color: white;
        font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
        font-weight: bold;
        font-size: 25px;
        text-align: center;
        margin: 10px 10px 10px 10px;
        line-height: 6;
    }
</style>
@if (User == null)
{
    @if (errormsg != "")
    {
        <h1 style="color:red">@errormsg</h1>
    <input type="button" value="Try Again" style="background-color: #0c1238;color:white;font-weight:bold " @onclick="googleButton_Click" />
    }
    else
    {
        <button @onclick="GetAccessToken" style="background-color: #0c1238;color:white;font-weight:bold ">Get Gmail Contact</button>
    }
}
else
{
    <div class="row">
        <a href="Profile"><div class="row-cols-3">Profile</div></a>
        <a href="Promote_Business"><div class="row-cols-3">Business Promote</div></a>
        <a href="https://accounts.google.com/Logout"><div class="row-cols-3">Logout</div></a>
    </div>
  
}

